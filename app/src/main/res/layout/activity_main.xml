<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <Button
            android:id="@+id/vBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静态注册-跨so包" />

        <Button
            android:id="@+id/vBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态注册1" />

        <Button
            android:id="@+id/vBtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="动态注册2" />

        <Button
            android:id="@+id/vBtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本类型的调用" />

        <Button
            android:id="@+id/vBtn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：String数组" />

        <Button
            android:id="@+id/vBtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：间接调用Java对象的普通和静态变量" />

        <Button
            android:id="@+id/vBtn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：直接调用Java对象的静态变量/方法" />

        <Button
            android:id="@+id/vBtn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：间接调用Java对象的实例方法" />

        <Button
            android:id="@+id/vBtn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：间接调用Java对象的静态方法" />

        <Button
            android:id="@+id/vBtn10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：接口作为参数-本线程" />

        <Button
            android:id="@+id/vBtn11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：接口作为参数-切线程" />

        <Button
            android:id="@+id/vBtn12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：调用java构造函数1" />

        <Button
            android:id="@+id/vBtn13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用类型：调用java构造函数2" />

        <Button
            android:id="@+id/vBtn14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用方式：局部引用" />

        <Button
            android:id="@+id/vBtn15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用方式：全局引用" />

        <Button
            android:id="@+id/vBtn16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="引用方式：弱引用" />

        <Button
            android:id="@+id/vBtn17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native间接抛java的异常，native层捕获" />

        <Button
            android:id="@+id/vBtn18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native直接抛java异常，java层捕获" />

        <Button
            android:id="@+id/vBtn19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建native层线程" />

        <Button
            android:id="@+id/vBtn20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建native层线程并携带参数" />

        <Button
            android:id="@+id/vBtn21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="join native层线程" />

        <Button
            android:id="@+id/vBtn22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native线程等待[1]" />

        <Button
            android:id="@+id/vBtn23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native线程唤起[2]" />

        <Button
            android:id="@+id/vBtn24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="native生产者消费者模型" />
    </LinearLayout>
</ScrollView>
